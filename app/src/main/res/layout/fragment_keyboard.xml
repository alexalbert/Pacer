<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:id="@+id/keypad"
	android:background="#000044" android:stretchColumns="*"
	android:paddingTop="15dp" android:paddingBottom="15dp">
	<TableRow android:padding="10dp">
		<TextView android:id="@+id/k1" android:text="1"
			android:gravity="center" android:textSize="32dp" android:textColor="#ffffff" />
		<TextView android:id="@+id/k2" android:gravity="center"
			android:text="2" android:textSize="32dp" android:textColor="#ffffff" />
		<TextView android:id="@+id/k3" android:text="3"
			android:gravity="center" android:textSize="32dp" android:textColor="#ffffff" />
	</TableRow>
	<TableRow android:padding="10dp">
		<TextView android:id="@+id/k4" android:text="4"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
		<TextView android:id="@+id/k5" android:text="5"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
		<TextView android:id="@+id/k6" android:text="6"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
	</TableRow>
	<TableRow android:padding="10dp">
		<TextView android:id="@+id/k7" android:text="7"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
		<TextView android:id="@+id/k8" android:text="8"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
		<TextView android:id="@+id/k9" android:text="9"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
	</TableRow>
	<TableRow android:padding="10dp">
		<TextView android:id="@+id/clear" android:text="Clear"
			android:textSize="20dp" android:gravity="center" android:textColor="#ffffff"
			android:paddingBottom="8dp" />
		<TextView android:id="@+id/k0" android:text="0"
			android:textSize="32dp" android:gravity="center" android:textColor="#ffffff" />
		<TextView android:id="@+id/done" android:text="Done"
			android:textSize="20dp" android:gravity="center" android:textColor="#ffffff"
			android:paddingBottom="8dp" />
	</TableRow>
</TableLayout>